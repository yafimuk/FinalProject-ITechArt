@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated) {

    using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" })) {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
           @if (User.IsInRole("admin")) {

            <li>@Html.ActionLink("All Users", "AllUsers", "Admin")</li>

                }
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hello @User.Identity.GetUserName()<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("UserInfo", "User", new { id = User.Identity.GetUserName() }, null)</li>
                    <li>@Html.ActionLink("EditDetails", "User")</li>

                </ul>
            </li>

                <li><a href="javascript:document.getElementById('logoutForm').submit()"> Logout </a></li>
            </ul>
    }
}
else {
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
